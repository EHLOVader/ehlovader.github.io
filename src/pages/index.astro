---
import Layout from '../layouts/Default.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import { Icon } from "astro-icon";

//last two digits of current year
const year = new Date().getFullYear().toString().slice(-2);
---

<Layout title="EHLOVader">

    <nav>
        <ul>
            <li><a href="https://github.com/EHLOVader"><Icon name="fab:github"/> Github</a></li>
            <li><a href="https://www.linkedin.com/in/ehlovader/"><Icon name="fab:linkedin"/> LinkedIn</a></li>
            <li><a href="https://www.codepen.io/EHLOVader"><Icon name="fab:codepen"/> CodePen</a></li>

        </ul>
    </nav>
</Layout>

<style>
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 3rem;
        justify-content: center;
        align-items: center;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin: 0 0 1rem 0;
    }

    a {
        position: relative;
        text-decoration: none;
        color: #fff;
        display: flex;
        align-items: center;
        margin-left: 40px;
        border-bottom: 2px solid transparent;
        transition: all 0.2s ease-in-out;
    }

    a:hover {
        color: #FF9900;
        text-decoration: none;
        border-bottom: 2px solid #FF9900;
    }

    svg {
        position: absolute;
        left: -40px;
        width: 30px;
        height: 30px;
        fill: #fff;
        margin-right: 1rem;
    }
</style>